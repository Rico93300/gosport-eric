{% extends 'base.html.twig' %}

{% block title %}Edit produit{% endblock %}

{% block body %}
  <div class="col-3 mx-auto my-5 p-3 bg-light rounded-3" style="min-width:250px;max-width:300px;">
<h3 class="text-center">Modifier</h3>
    {{ form_start(form) }}
        {# {{ form_widget(form) }} #}
        <div class="d-flex flex-column  justify-content-center">
        
        <div class="w-75">
            {{ form_row(form.title, {
                    label: 'titre :'
                }) }}
        </div>
        <div class="w-75">
        {{ form_row(form.description, {
                label: 'Description :'
            }) }}
        </div>
        <div class="mx-1 d-flex flex-wrap">
        {{ form_row(form.price, {
                label: 'Prix :'
            }) }}
        </div>
         <div class="mx-1 d-flex flex-wrap">
        {{ form_row(form.reference, {
                label: 'Reference :'
            }) }}
        </div>
       
        <div class="d-flex justify-content-center">
            <button class="btn btn-info mx-2">{{ button_label|default('Save') }}</button>
            {{ include('product/_delete_form.html.twig') }}
        </div>
        <a class="my-2" href="{{ path('app_product_index') }}">back to list</a>
    {{ form_end(form) }}
</div>  
</div>  
{% endblock %}