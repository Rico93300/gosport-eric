{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
   

  
    <h1  class="text-light-emphasis">Produit</h1>

    <table class="table w-50 mx-auto">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
             <tr>
                <th>Caterorie</th>
                <td>{{ product.category.name }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ product.reference }}</td>
            </tr>
        </tbody>
    </table>

    <div class="w-25 mx-auto d-flex align-items-center flex-column">
        

    <a class="btn btn-warning my-1" href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
      <a href="{{ path('app_product_index') }}">back to list</a>
    </div>
{% endblock %}